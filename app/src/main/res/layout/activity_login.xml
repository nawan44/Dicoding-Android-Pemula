<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    tools:context="com.contoh.rachgunawan.Produk1Activity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Nawan Shop"
        android:gravity="center"
        android:textSize="30sp"
        android:textColor="@android:color/holo_blue_dark"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Tempatnya Barang Berkualitas"
        android:gravity="center"
        android:textSize="15sp"
        android:textColor="@android:color/holo_blue_light"/>
    <ImageView
        android:id="@+id/iv_logo"
        android:layout_width="125dp"
        android:layout_height="150dp"
        android:layout_gravity="center"
        android:src="@drawable/ic_giftcard"
        />
    <TextView
        style="@style/TextContent.Blue1"
        android:layout_marginTop="5dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Username"
        android:textStyle="bold"
        android:textAppearance="?android:attr/textAppearanceMedium"/>
    <EditText
        android:id="@+id/et_username"
        android:layout_marginLeft="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Masukkan Username"
        android:textSize="10sp"
        android:inputType="text"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Password"
        android:layout_marginTop="5dp"
        android:textStyle="bold"
        style="@style/TextContent.Blue1"
        android:textAppearance="?android:attr/textAppearanceMedium"/>
    <EditText
        android:layout_marginLeft="20dp"
        android:id="@+id/et_password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Masukkan Password"
        android:textSize="10sp"
        android:inputType="textPassword"/>

    <Button
        android:id="@+id/btnBeranda"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/activity_horizontal_margin"
        android:layout_marginRight="@dimen/activity_horizontal_margin"
        android:layout_marginBottom="@dimen/activity_vertical_margin1"
        style="@style/ButtonGeneral"
        android:onClick="btnLogin"
        android:text="Masuk"/>

        <TextView
            android:layout_marginTop="5dp"
            style="@style/TextContent.Subtitle"
            android:textSize="10sp"
            android:text="Gunakan username dan password = admin"
            android:layout_marginBottom="2dp"/>
    <TextView
        android:layout_marginTop="10dp"
        style="@style/TextContent.Blue1"
        android:textSize="10sp"
        android:text="@string/akun"
        android:layout_marginBottom="2dp"/>
    <TextView
        android:layout_marginTop="2dp"
        style="@style/TextContent.Red1"
        android:textSize="10sp"
        android:text="@string/buatakun"
        android:layout_marginBottom="5dp"/>
    <Button
        android:layout_marginTop="10dp"
        android:layout_width="150dp"
        android:layout_gravity="center"
        android:layout_height="wrap_content"
        android:text="Beranda"
        android:textStyle="bold"
        android:textColor="@android:color/black"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:onClick="btnBack"

        />


</LinearLayout>
    </ScrollView>